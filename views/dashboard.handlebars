<section class="blogs">
  <h1>Welcome {{name}}!</h1>
  <div class="blog-details">
    <div class="blog-card">
      <form class="form blog-form" id="blogForm">
        <div class="form-group">
          <p>Author: {{name}}</p>
        </div>
        <div class="form-group">
          <p>Date: {{today_date}}</p>
        </div>
        <div class="form-group">
          <label for="title">Title:</label>
          <input class="input" type="text" id="title" placeholder="Enter a title for your blog" style="width: 20rem; height: 2rem;"/>
        </div>
        <div class="form-group">
          <label for="content">Content:</label>
          <input class="input" type="text" id="content" placeholder="Type in your blog" style="width: 55rem; height: 20rem;"/>
        </div>
        <div class="form-group">
          <button class="btn" type="submit" id="post-btn">Post Blog</button>
        </div>
      </form>
    </div>

    <div>
      <div class="my-blogs">
        <ul class="my-blogs-list"></ul>
      </div>
    </div>
  </div>
</section>

<script src="/js/dashboard.js"></script>